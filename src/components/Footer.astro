  </div>

  <div>
    <FooterConnections client:only="react" />
  </div>

  <div class="space-x-1">
    <a aria-label="github" class="inline-block" href="https://github.com/bsdayo" target="_blank">
      <Icon name="simple-icons:github" />
    </a>
    <a
      aria-label="x"
      class="inline-block"
      href="https://steamcommunity.com/id/bsdayo"
      target="_blank"
    >
      <Icon name="simple-icons:steam" />
    </a>
    <a aria-label="x" class="inline-block" href="https://twitter.com/konobsdayo" target="_blank">
