---
import { Icon } from 'astro-icon/components'
import { FooterConnections } from './FooterConnections'
---

<script>
  import { onSocketMessage } from '@/utils/socket'
  import { $socketConnections } from '@/utils/stores'

  onSocketMessage((message) => {
    if (message.type !== 'state') return
    $socketConnections.set(message.connections)
  })
</script>

<div class="opacity-50 text-sm space-y-2">
  <div>
