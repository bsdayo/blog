---
import { cn } from '@/lib/utils'
import { ExcalidrawRaw, type ExcalidrawProps } from './ExcalidrawRaw'
import '@excalidraw/excalidraw/index.css'

type Props = ExcalidrawProps & {
  class?: string
}

//
---

<figure>
  <div
    class={cn(
      'w-full aspect-[16/9] rounded-lg border-border border overflow-hidden',
      Astro.props.class,
    )}
  >
    <ExcalidrawRaw {...Astro.props} client:only="react" />
  </div>
  <figcaption><slot /></figcaption>
</figure>

<style is:global>
  .excalidraw .App-toolbar-content,
  .excalidraw .context-menu {
    display: none !important;
  }
</style>
